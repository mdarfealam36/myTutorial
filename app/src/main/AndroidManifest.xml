<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTutorial"
        tools:targetApi="31">
        <activity
            android:name=".TabLayout.TabLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".Toolbar.ToolbarActivity"
            android:exported="false" />
        <activity
            android:name=".CheckInternetConnection.CheckInternetConnection"
            android:exported="false" />
        <activity
            android:name=".BottomSheet.BottomSheetActivity"
            android:exported="false" />
        <activity
            android:name=".AlertDialogActivity.AlertDialogActivity"
            android:exported="false" />
        <activity
            android:name=".ShareBundle.ShareBundleReceiveData"
            android:exported="false" />
        <activity
            android:name=".ShareBundle.ShareBundleSendData"
            android:exported="false" />
        <activity
            android:name=".IntentActivity.IntentActivity"
            android:exported="false" />
        <activity
            android:name=".IntentActivity.ImplicitIntent"
            android:exported="false" />
        <activity
            android:name=".ToastActivity.FancyToastActivity"
            android:exported="false" />
        <activity
            android:name=".ToastActivity.ToastActivity"
            android:exported="false" />
        <activity
            android:name=".IntentActivity.ExplicitIntent"
            android:exported="false"
            android:label="@string/title_activity_intent"
            android:theme="@style/Theme.MyTutorial" />
        <activity
            android:name=".SplashActivity.SplashActivity"
            android:exported="false"
            android:launchMode="singleInstance" />
        <activity
            android:name=".SplashActivity.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>