<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToastActivity.ToastActivity">

    <Button
        android:id="@+id/btnDefaultToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default toast"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCustomToast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Custom Toast"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnDefaultToast"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnDefaultToast"
        app:layout_constraintTop_toBottomOf="@+id/btnDefaultToast" />

    <Button
        android:id="@+id/btnFancyToast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Fancy Toast"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnCustomToast"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnCustomToast"
        app:layout_constraintTop_toBottomOf="@+id/btnCustomToast" />
    <Button
        android:id="@+id/btnCustomToast2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Custom Toast 2"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnFancyToast"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnFancyToast"
        app:layout_constraintTop_toBottomOf="@+id/btnFancyToast" />

</androidx.constraintlayout.widget.ConstraintLayout>